<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: ""
            halign: "right"
            font_size: 75
            size_hint: (1, .35)
            background_color: (20/255, 20/255, 30/255, 1)
            foreground_color: (1, 1, 1, 1)

        GridLayout:
            cols:4
            rows:7
            spacing: -3
            padding: 4
  
            # Row
            Button:
                size_hint_: (.8, .8)
                font_size: 75
                text: u"\u00AB"
                background_color: (34/255, 22/255, 196/255)
                on_press: root.remove()

            Button:
                id: clear
                size_hint: (.8, .8)
                font_size: 45
                text: "C"
                background_color: (34/255, 22/255, 196/255)
                on_press: root.clear()

            Button:
                id: equals
                size_hint: (.8, .8)
                font_size: 45
                text: "√" 
                on_press: root.square_root()
                background_color: (34/255, 22/255, 196/255)
                
            Button:
                size_hint: (.8, .8)
                font_size: 45
                text: "x^y"
                on_press:root.math_sign("**")
                background_color: (34/255, 22/255, 196/255)

            # Row
            Button:
                size_hint_: (.8, .8)
                font_size: 45
                text: "1/x"
                on_press:root.math_sign("1/")
                background_color: (34/255, 22/255, 196/255)

            Button:
                id: clear
                size_hint: (.8, .8)
                font_size: 45
                text: "e"
                on_press:root.math_sign("2.7182818285")
                background_color: (34/255, 22/255, 196/255)

            Button:
                id: clear
                size_hint: (.8, .8)
                font_size: 45
                text: "π" 
                on_press:root.math_sign("3.1415926536")
                background_color: (34/255, 22/255, 196/255)

            Button:
                size_hint: (.8, .8)
                font_size: 45
                text: "×"
                on_press:root.math_sign("*")
                background_color: (34/255, 22/255, 196/255)

            # Row
            Button:
                size_hint: (.8, .8)
                font_size: 45
                text: "7"
                on_press: root.button_press(7)
                background_color: (2/255, 10/255, 24/255)
               
            Button:
                size_hint: (.8, .8)
                font_size: 45
                text: "8"
                on_press: root.button_press(8)
                background_color: (2/255, 10/255, 24/255)

            Button:
                size_hint: (.8, .8)
                font_size: 45
                text: "9"
                on_press: root.button_press(9)
                background_color: (2/255, 10/255, 24/255)

            Button:
                size_hint: (.8, .8)
                font_size: 45
                text: "÷"
                on_press:root.math_sign("/")
                background_color: (34/255, 22/255, 196/255)

            # Row
            Button:
                size_hint: (.8, .8)
                font_size: 45
                text: "4"
                on_press: root.button_press(4)
                background_color: (2/255, 10/255, 24/255)

            Button:
                size_hint: (.8, .8)
                font_size: 45
                text: "5"
                on_press: root.button_press(5)
                background_color: (2/255, 10/255, 24/255)

            Button:
                size_hint: (.8, .8)
                font_size: 45
                text: "6"
                on_press: root.button_press(6)
                background_color: (2/255, 10/255, 24/255)

            Button:
                size_hint: (.8, .8)
                font_size: 45
                text: "+"
                on_press: root.math_sign("+")
                background_color: (34/255, 22/255, 196/255)

            # Row
            Button:
                size_hint: (.8, .8)
                font_size: 45
                text: "1"
                background_color: (2/255, 10/255, 24/255)
                on_press: root.button_press(1)

            Button:
                size_hint: (.8, .8)
                font_size: 45
                text: "2"
                background_color: (2/255, 10/255, 24/255)
                on_press: root.button_press(2)

            Button:
                size_hint: (.8, .8)
                font_size: 45
                text: "3"
                background_color: (2/255, 10/255, 24/255)
                on_press: root.button_press(3)

            Button:
                size_hint: (.8, .8)
                font_size: 45
                text: "–"
                on_press: root.math_sign("-")
                background_color: (34/255, 22/255, 196/255)

            # Row
            Button:
                size_hint_: (.8, .8)
                font_size: 45
                text: "+/–"
                background_color: (2/255, 10/255, 24/255)
                on_press: root.pos_neg()

            Button:
                id: clear
                size_hint: (.8, .8)
                font_size: 45
                text: "0"
                on_press: root.button_press(0)
                background_color: (2/255, 10/255, 24/255)

            Button:
                id: clear
                size_hint: (.8, .8)
                font_size: 80
                text: "." 
                background_color: (2/255, 10/255, 24/255)
                on_press: root.dot()
                on_press: root.dot_one()
                on_press: root.dot_three()
                on_press: root.dot_two()

            Button:
                size_hint: (.8, .8)
                font_size: 60
                text: "="
                background_color: (34/255, 22/255, 196/255)
                on_press: root.equals()

       

